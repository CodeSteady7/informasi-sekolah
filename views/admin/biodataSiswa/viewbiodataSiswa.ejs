<script>
  $('#dataTable').on('click', '.button-update', function () {
    let id = $(this).data('id');
    let nis = $(this).data('nis');
    let name = $(this).data('name');
    let kelas = $(this).data('kelas');
    let tempatlahir = $(this).data('tempatlahir');
    let tanggallahir = $(this).data('tanggallahir');
    let alamat = $(this).data('alamat');
    console.log(id + nis + name + kelas + tempatlahir + tanggallahir + alamat);
    $('#editbiodata').modal('show');
    $('.id').val(id);
    $('.nis').val(nis);
    $('.name').val(name);
    $('.kelas').val(kelas);
    $('.tempatlahir').val(tempatlahir);
    $('.tanggallahir').val(tanggallahir);
    $('.alamat').val(alamat);
  });
</script>
