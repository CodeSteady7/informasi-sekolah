<!-- Modal -->
<div
  class="modal fade"
  id="add-kelasC"
  tabindex="-1"
  role="dialog"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Add Siswa Kelas C</h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form action="/admin/kelas" method="POST">
        <div class="modal-body">
          <div class="form-group">
            <label for="name">Nama</label>
            <Select class="form-control" name="siswaId">
              <option value="">-- Nama Siswa --</option>
              <% for(let i = 0; i < siswa.length; i++) {%>
              <option value="<%= siswa[i].id %>"><%= siswa[i].name %></option>
              <%}%>
            </Select>
          </div>
          <div class="form-group">
            <label for="name">Matematika</label>
            <input
              type="number"
              class="form-control"
              id="matematika"
              name="matematika"
              placeholder="Enter Matematika"
              required
            />
          </div>
          <div class="form-group">
            <label for="name">Bahasa Indonesia</label>
            <input
              type="number"
              class="form-control"
              id="bahasaindonesia"
              name="bahasaindonesia"
              placeholder="Enter Bahasa Indonesia"
              required
            />
          </div>
          <div class="form-group">
            <label for="name">Bahasa Inggris</label>
            <input
              type="number"
              class="form-control"
              id="bahasainggris"
              name="bahasainggris"
              placeholder="Enter Bahasa Inggris"
              required
            />
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">
            Close
          </button>
          <button type="submit" class="btn btn-primary">Add</button>
        </div>
      </form>
    </div>
  </div>
</div>
